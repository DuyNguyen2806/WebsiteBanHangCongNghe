<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="utf-8">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<meta name="description" content="">
	<meta name="author" content="">
	<title>Home | E-Shopper</title>
	<link href="~/css/bootstrap.min.css" rel="stylesheet">

	<link href="~/css/font-awesome.min.css" rel="stylesheet">
	<link href="~/css/prettyPhoto.css" rel="stylesheet">
	<link href="~/css/price-range.css" rel="stylesheet">
	<link href="~/css/animate.css" rel="stylesheet">
	<link href="~/css/main.css" rel="stylesheet">
	<link href="~/css/responsive.css" rel="stylesheet">
	<!--[if lt IE 9]>
	<script src="~/js/html5shiv.js"></script>
	<script src="~/js/respond.min.js"></script>
	<![endif]-->
	<link rel="shortcut icon" href="~/images/ico/favicon.ico">
	<link rel="apple-touch-icon-precomposed" sizes="144x144" href="~/images/ico/apple-touch-icon-144-precomposed.png">
	<link rel="apple-touch-icon-precomposed" sizes="114x114" href="~/images/ico/apple-touch-icon-114-precomposed.png">
	<link rel="apple-touch-icon-precomposed" sizes="72x72" href="~/images/ico/apple-touch-icon-72-precomposed.png">
	<link rel="apple-touch-icon-precomposed" href="~/images/ico/apple-touch-icon-57-precomposed.png">
</head><!--/head-->

<body>
	<style>
		.text-success {
			color: #3c763d;
			margin: 174px;
		}
	</style>

	<header id="header">
		@await Html.PartialAsync("_PartialHeader")
		@await Html.PartialAsync("_PartialMenu")

	</header><!--/header-->
	@await Html.PartialAsync("_PartialBanner")
	<div>
		@if (TempData["SuccessMessage"] != null)
		{
			<span class="text-success">@TempData["SuccessMessage"]</span>
		}
	</div>

	<section>
		<div class="container">
			<div class="row">
				<div class="col-sm-3">
					<div class="left-sidebar">
					
							<!--category-productsr-->
							@await Component.InvokeAsync("MenuCategory")
						
						
							@await Component.InvokeAsync("MenuBrand")
						<div class="price-range">
							<!--price-range-->
							<h2>Price Range</h2>
							<!-- Select box cho giá tối thiểu -->
							<div class="form-group">
								<label for="min-price-select">Giá từ:</label>
								<select class="form-control" id="min-price-select" style="width: 100%;">
									<option value="0">0 VND</option>
									<option value="100000">100,000 VND</option>
									<option value="500000">500,000 VND</option>
									<option value="1000000">1,000,000 VND</option>
									<!-- Thêm các tùy chọn giá khác tùy theo nhu cầu -->
								</select>
							</div>

							<!-- Select box cho giá tối đa -->
							<div class="form-group">
								<label for="max-price-select">Đến:</label>
								<select class="form-control" id="max-price-select" style="width: 100%;">
									<option value="10000000">10,000,000 VND</option>
									<option value="20000000">20,000,000 VND</option>
									<option value="30000000">30,000,000 VND</option>
									<option value="40000000">40,000,000 VND</option>
									<option value="100000000">100,000,000 VND</option>

								
									<!-- Thêm các tùy chọn giá khác tùy theo nhu cầu -->
								</select>
							</div>

							<!-- Nút tìm kiếm -->
							<button class="btn btn-primary" id="filter-button" style="width: 100%;">Filter</button>

							@* <div class="well">
								<div class="slider slider-horizontal" style="width: 178px;"><div class="slider-track"><div class="slider-selection" style="left: 41.6667%; width: 33.3333%;"></div><div class="slider-handle round left-round" style="left: 41.6667%;"></div><div class="slider-handle round" style="left: 75%;"></div></div><div class="tooltip top" style="top: -30px; left: 70.8333px;"><div class="tooltip-arrow"></div><div class="tooltip-inner">250 : 450</div></div><input type="text" class="span2" value="" data-slider-min="0" data-slider-max="600" data-slider-step="5" data-slider-value="[250,450]" id="sl2" style=""></div><br>
								<b>$ 0</b> <b class="pull-right">$ 600</b>
							</div> *@
						</div>

				
								
					

						
						

					</div>
				</div>

				<div class="col-sm-9 padding-right">
					@RenderBody()
					
					@await Component.InvokeAsync("ProductRecommend")
				</div>
				
			</div>
		</div>
	</section>

	@await Html.PartialAsync("_PartialFooter");



	<script src="~/js/jquery.js"></script>
	<script src="~/js/bootstrap.min.js"></script>
	<script src="~/js/jquery.scrollUp.min.js"></script>
	<script src="~/js/price-range.js"></script>
	<script src="~/js/jquery.prettyPhoto.js"></script>
	<script src="~/js/main.js"></script>
	
	@RenderSection("Scripts", required: false)

</body>
</html>
<script>
	$(function () {
		$("#filter-button").click(function () {
			var minPrice = $("#min-price-select").val();
			var maxPrice = $("#max-price-select").val();

			// Chuyển hướng đến action Index với các tham số lọc
			window.location.href = "/Product/Index?page=1&minPrice=" + minPrice + "&maxPrice=" + maxPrice;
		});
	});
</script>