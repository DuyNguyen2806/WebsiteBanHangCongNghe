@model WebsiteBanHangCongNghe.ViewModel.LoginVM
@{
    ViewData["Hide"] = true;
    Layout = "_MainLayout";
}

<div class="signup-form w-auto">
	<style>
		button.btn.border-secondary.py-3.px-4.text-uppercase.w-100.text-primary {
			margin-left: 14px;
		}

		.signup-form {
			width: inherit;
		}

		</style>
<h1>Login</h1>

<form asp-action="Login" asp-controller="Access" asp-route-returnUrl="@ViewBag.returnUrl">
		<div class="form-item w-100">
			<label asp-for="@Model.Username" class="form-label my-3"></label><sup>*</sup>
			<input asp-for="@Model.Username" class="form-control">
			<span asp-validation-for="@Model.Username" class="text-danger"></span>
		</div>
		<div class="form-item w-100">
			<label asp-for="@Model.Password" class="form-label my-3"></label><sup>*</sup>
			<input asp-for="@Model.Password" class="form-control">
			<span asp-validation-for="@Model.Password" class="text-danger"></span>
		<div class="row g-4 text-center align-items-center justify-content-center pt-4 m">
			<button type="submit" class="btn border-secondary py-3 px-4 text-uppercase w-100 text-primary">Login</button>
		</div>
		@if (!string.IsNullOrEmpty(ViewBag.Error))
    {
        <div class="text-danger">@ViewBag.Error</div>
    }
</form>
</div>
