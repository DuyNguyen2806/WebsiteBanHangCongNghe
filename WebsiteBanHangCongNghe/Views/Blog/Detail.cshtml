@model WebsiteBanHangCongNghe.Data.Blog
@{
    ViewData["Title"] = "Detail";
    Layout = "_MainLayout";
}

<div class="single-blog-post">
	<h3>@Model.Title</h3>
	<div class="post-meta">
		<span>
			<i class="fa fa-star"></i>
			<i class="fa fa-star"></i>
			<i class="fa fa-star"></i>
			<i class="fa fa-star"></i>
			<i class="fa fa-star-half-o"></i>
		</span>
	</div>
	<a href="">
		<img src="~/imgs/Images/Blog/@Model.Img" alt="" width="auto" height="600px">
	</a>
	<br />
	<br />
	<br />
	<br />
	<p>@Model.Description</p>
		

	
	<div class="pager-area">
		<ul class="pager pull-right">
			<li><a href="#">Pre</a></li>
			<li><a href="#">Next</a></li>
		</ul>
	</div>
</div>

