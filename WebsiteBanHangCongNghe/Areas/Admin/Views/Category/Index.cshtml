@using X.PagedList.Mvc.Core;
@model X.PagedList.IPagedList<WebsiteBanHangCongNghe.Data.Category>;

@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<h1>Danh mục loại hàng</h1>

<p>
    <a class="btn btn-success btn-sm" asp-action="Create">Create New</a>
</p>
<p>Tổng số lượng loại hàng: @ViewBag.totalCategory</p>
<table class="table">
    <thead>
        <tr class="table-warning">
            <th>
                Name
            </th>
            <th style="width: 50%;">
                ShortDescription
            </th>
            
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
            <tr class="table-success">
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
                <td style="word-wrap: break-word; white-space: normal;">
                @Html.DisplayFor(modelItem => item.ShortDescription)
            </td>
          
            <td>
                    <a class="btn btn-warning btn-sm" asp-action="Edit" asp-route-id="@item.Id">Edit</a> |

                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm" >Delete</a>
                

            </td>
        </tr>
}
    </tbody>
</table>
@Html.PagedListPager(Model, page => Url.Action("Index", new { page = page }), new X.PagedList.Web.Common.PagedListRenderOptions()
{
    LiElementClasses = new List<String> { "page-item" },
    PageClasses = new List<String> { "page-link" }
})

